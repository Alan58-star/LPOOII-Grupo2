<Window x:Class="Vistas.ABMArticulos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="ABMArticulos" Height="400" Width="600" Loaded="Window_Loaded">
    <Window.Resources>
     <ObjectDataProvider
            x:Key="LIST_ARTICULO"
            ObjectType="{x:Type svc:TrabajarArticulos}"
            MethodName="TraerArticulosColeccion">            
        </ObjectDataProvider>
    </Window.Resources>

    <Grid Name="contentGrid" DataContext="{Binding Source={StaticResource ResourceKey=LIST_ARTICULO}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="90*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="center">
                <Button Content="Nuevo" Margin="7,0" Height="30" Width="70"></Button>
                <Button Content="Nuevo" Margin="7,0" Height="30" Width="70"></Button>
                <Button Content="Nuevo" Margin="7,0" Height="30" Width="70"></Button>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="center">
                <Button x:Name="btn_first" Content="|&lt;" Margin="7,0" Height="30" Width="30" Click="btn_first_Click"></Button>
                <Button x:Name="btn_prev" Content="&lt;" Margin="7,0" Height="30" Width="30" Click="btn_prev_Click"></Button>
                <Button x:Name="btn_next" Content=">" Margin="7,0" Height="30" Width="30" Click="btn_next_Click"></Button>
                <Button x:Name="btn_last" Content=">|" Margin="7,0" Height="30" Width="30" Click="btn_last_Click"></Button>
            </StackPanel>            
        </Grid>
        
        <Grid Grid.Row="1" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition> 
            </Grid.ColumnDefinitions>            
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <Label Grid.Column="0" Grid.Row="0" Content="Código" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="0" Grid.Row="1" Content="Descripción" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="0" Grid.Row="2" Content="Familia" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="0" Grid.Row="3" Content="Categoría" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="0" Grid.Row="4" Content="Unidad de Medida" HorizontalAlignment="Center"></Label>
            <Label Grid.Column="0" Grid.Row="5" Content="Costo" HorizontalAlignment="Center"></Label>

            <TextBlock Text="{Binding Art_Id}" Grid.Column="1" Grid.Row="0" Width="auto" Height="30" ></TextBlock>
            <TextBlock Text="{Binding Art_Descrip}" Grid.Column="1" Grid.Row="1" Width="auto" Height="30"></TextBlock>
            <TextBlock Text="{Binding Fam_Id}" Grid.Column="1" Grid.Row="2" Width="auto" Height="30"></TextBlock>
            <TextBlock Text="{Binding Categoria.Cat_Descrip}" Grid.Column="1" Grid.Row="3" Width="auto" Height="30"></TextBlock>
            <TextBlock Text="{Binding Um_Id}" Grid.Column="1" Grid.Row="4" Width="auto" Height="30"></TextBlock>
            <TextBlock Text="{Binding Art_Precio}" Grid.Column="1" Grid.Row="5" Height="30" Margin="0,7"></TextBlock>
        </Grid>
        
    </Grid>
</Window>
