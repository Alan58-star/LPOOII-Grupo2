<Window x:Class="Vistas.winHistorialLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        Title="winHistorialLogin" MinHeight="600" MinWidth="800" Height="600" Width="800" Style="{StaticResource MainWindowStyle}"  WindowStartupLocation="CenterScreen" MouseLeftButtonDown="moveWindow" Loaded="Window_Loaded">
    <Window.Resources>
        <ObjectDataProvider
            x:Key="LIST_LOGS"
            ObjectType="{x:Type svc:TrabajarHistorialLogin}"
            MethodName="TraerLogsColeccion"
        />

        <CollectionViewSource
            x:Key="VISTA_LOGS"
            Source="{StaticResource ResourceKey=LIST_LOGS}"
            Filter="eventVistaLogs_Filter">

            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="Log_Id" Direction="Descending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <Style TargetType="ToolTip">
            <Setter Property="Background" Value="Black"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Style="{StaticResource MainGridStyle}">
            <DockPanel Height="40" Name="dockPanel1" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top" FlowDirection="RightToLeft">
                <Ellipse Height="15" ToolTip="Cerrar ventana" HorizontalAlignment="Right" Name="btnClose" Fill="#FFFF4B6A" Width="15" Margin="10,0,5,0" MouseLeftButtonDown="closeWindow"/>
                <Ellipse Height="15" ToolTip="Minimizar ventana" HorizontalAlignment="Left" Name="btnMaximize" Fill="#EEEEEE" Width="15" Margin="5,0,5,0" MouseLeftButtonDown="minimizeWindow"/>
                <Label Name="lblWinTitle" Content="Historial de Login" Padding="20,0" HorizontalAlignment="Right" FontFamily="FreeSans" FontSize="12" VerticalContentAlignment="Center" Foreground="#EEEEEE"/>
            </DockPanel>
        </Border>

        <Grid Margin="40,60,40,40">
            <Grid.RowDefinitions>
                <RowDefinition Height="30*"></RowDefinition>
                <RowDefinition Height="60*"></RowDefinition>
                <RowDefinition Height="10*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label Content="Historial de Logs" HorizontalAlignment="center" VerticalAlignment="Center" Style="{StaticResource FormTitle}"></Label>
                <Label Content="Buscar por usuario:" HorizontalAlignment="center" Style="{StaticResource StyleLabelForm}" VerticalAlignment="Center"></Label>
                <TextBox Margin="10" x:Name="txtSearch" Width="200" HorizontalAlignment="Center" Style="{StaticResource StyleTextBoxForm}" TextChanged="txtSearch_TextChanged"></TextBox>
            </StackPanel>

            <ListView Grid.Row="1" Name="lvwLogs" Width="700" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Column="1" Height="auto" ItemsSource="{Binding Source= {StaticResource VISTA_LOGS}}" IsSynchronizedWithCurrentItem="True" Background="Black" Foreground="White" FontFamily="Century Gothic" HorizontalContentAlignment="Center" BorderBrush="Black" SelectionChanged="lvwLogs_SelectionChanged">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="30" Header="ID" DisplayMemberBinding="{Binding Log_Id}"/>
                        <GridViewColumn Width="90" Header="Usuario" DisplayMemberBinding="{Binding Usuario.Usr_NombreUsuario}"/>
                        <GridViewColumn Width="150" Header="Apellido y nombre" DisplayMemberBinding="{Binding Usuario.Usr_ApellidoNombre}"/>
                        <GridViewColumn Width="90" Header="Rol" DisplayMemberBinding="{Binding Usuario.Rol.Rol_Descrip}"/>
                        <GridViewColumn Width="150" Header="Fecha y Hora" DisplayMemberBinding="{Binding Log_Fecha_Hora}"/>
                        <GridViewColumn Width="180" Header="Descripción" DisplayMemberBinding="{Binding Log_Descrip}"/>
                        
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Grid.Row="2" ToolTip="Actualizar la descripción del log seleccionado" Content="Actualizar descripción" Style="{StaticResource ButtonFormBlack}" Grid.Column="1" Height="30" HorizontalAlignment="Center" Name="btnActualizar" VerticalAlignment="Bottom" Width="185" Click="btnActualizar_Click" />
            
        </Grid>
    </Grid>
</Window>
